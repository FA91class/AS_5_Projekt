@model Impf_App.Models.Patient

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger">Versicherungs Nummer:</div>
            <input type="hidden" asp-for="P_InsuranceNr" />
            <div class="form-group">
                <label asp-for="P_InsuranceNr" class="control-label">Versicherungs Nummer:</label>
                <div class="container">@Html.DisplayFor(model => model.P_InsuranceNr)</div>
            </div>
            <div class="form-group">
                <label asp-for="PF_Insurance" class="control-label">Versicherung</label>
                <select asp-for="PF_InsuranceP_InssuranceId" class="form-control" asp-items="ViewBag.PF_Insurance">
                    <option value="">-- Select Insurance --</option>
                </select>
                <span asp-validation-for="PF_InsuranceP_InssuranceId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label">Geschlecht</label>
                <input asp-for="Sex" class="form-control" />
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Vorname</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Nachname</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirtHDate" class="control-label">Geburtsdatum</label>
                <input asp-for="BirtHDate" class="form-control" />
                <span asp-validation-for="BirtHDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdrNmbr" class="control-label">Adresse</label>
                <input asp-for="AdrNmbr" class="form-control" />
                <span asp-validation-for="AdrNmbr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PLZ" class="control-label">PLZ</label>
                <input asp-for="PLZ" class="form-control" />
                <span asp-validation-for="PLZ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Town" class="control-label">Stadt</label>
                <input asp-for="Town" class="form-control" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

