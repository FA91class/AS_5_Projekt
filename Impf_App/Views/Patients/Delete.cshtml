@model Impf_App.Models.Patient

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Sind sie sicher, dass sie den Eintrag löschen wollen?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Versicherungs Nummer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.P_InsuranceNr)
        </dd>
        <dt class="col-sm-2">
            Versicherung
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PF_Insurance.Description)
        </dd>
        <dt class = "col-sm-2">
            Geschlecht
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dt class = "col-sm-2">
            Vorname
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Nachname
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Geburtsdatum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirtHDate)
        </dd>
        <dt class = "col-sm-2">
            Adresse
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdrNmbr)
        </dd>
        <dt class = "col-sm-2">
            PLZ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PLZ)
        </dd>
        <dt class = "col-sm-2">
            Stadt
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Town)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="form-delete">
        <input type="hidden" asp-for="P_InsuranceNr" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
