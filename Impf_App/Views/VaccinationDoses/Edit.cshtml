@model Impf_App.Models.VaccinationDosis

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Impfung</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="F_Vaccine" class="control-label">Impfstoff</label>
                <select asp-for="F_VaccineP_VaccineId" class="form-control" asp-items="ViewBag.F_Vaccine">
                    <option value="">-- Select Vaccine --</option>
                </select>
                <span asp-validation-for="F_VaccineP_VaccineId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="F_Patient" class="control-label">Patient</label>
                <select asp-for="F_PatientP_InsuranceNr" class="form-control" asp-items="ViewBag.F_Patient">
                    <option value="">-- Select Patient --</option>
                </select>
                <span asp-validation-for="F_PatientP_InsuranceNr" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="ProductionDate" class="control-label">Produktionsdatum</label>
                <input asp-for="ProductionDate" class="form-control" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VaccinationDate" class="control-label">Impfdatum</label>
                <input asp-for="VaccinationDate" class="form-control" />
                <span asp-validation-for="VaccinationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place" class="control-label">Impfort</label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="F_Doctor" class="control-label">Arzt</label>
                <select asp-for="F_DoctorP_DoctorId" class="form-control" asp-items="ViewBag.F_Doctor">
                    <option value="">-- Select Doctor --</option>
                </select>
                <span asp-validation-for="F_DoctorP_DoctorId" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

