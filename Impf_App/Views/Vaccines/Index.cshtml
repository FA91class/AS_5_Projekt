@model IEnumerable<Impf_App.Models.Vaccine>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Beschreibung
            </th>
            <th>
                Hersteller
            </th>
            <th>
                Dosierung
            </th>
            <th>
                Datum der Zulassung
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dosis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfApproval)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.P_VaccineId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.P_VaccineId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.P_VaccineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
